{
  "name": "unphusist-users-service",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git"
  },
  "author": "UNPHU",
  "scripts": {
    "start": "yarn serve",
    "start:prod": "yarn build && yarn serve",
    "build": "yarn build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test:unit": "jest unit --forceExit --verbose",
    "test:integration": "jest int --forceExit --verbose",
    "test:all": "jest --forceExit --verbose",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "dev": "yarn watch-debug",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "db:seed": "ts-node ./src/data/seeders/cli/Seed.ts",
    "db:migrate": "yarn build && ./node_modules/.bin/typeorm migration:run",
    "db:undo": "yarn build && ./node_modules/.bin/typeorm migration:revert",
    "db:drop": "./node_modules/.bin/typeorm schema:drop",
    "db:reset": "yarn db:drop && yarn db:migrate",
    "db:query": "./node_modules/.bin/typeorm query"
  },
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/faker": "^4.1.5",
    "@types/glob": "^7.1.1",
    "@types/jsonwebtoken": "^8.3.2",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.5",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "faker": "^4.1.0",
    "glob": "latest",
    "jsonwebtoken": "^8.5.1",
    "mssql": "^4.3.0",
    "nodemailer": "^6.4.16",
    "pg": "^7.9.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "tslint-config-airbnb": "^5.11.1",
    "typeorm": "0.2.14"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.0.4",
    "license": "MIT",
    "nodemon": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
